{
  "manifest_version": 3,
  "name": "Prompt Toolbox Extension",
  "version": "1.0",
  "description": "Split large bodies of text into chunks",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",    
    "default_title": "Prompt Toolbox Extension"  
  }, 
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",  
    "128": "icons/icon128.png"    
  },
  "content_scripts": [{    
    "matches": ["https://chat.openai.com/*"],    
    "js": ["src/content.js"]    
  }],
  "background": {
    "service_worker": "src/background.js"    
  }
}