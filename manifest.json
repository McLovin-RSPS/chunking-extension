{
  "description": "A Chrome Browser plugin for Chat Gpt that automates the entry of a large piece of text a little bit at a time.",
  "manifest_version": 3,
  "name": "Chat Gpt Long Text Input",
  "version": "1.4.3",
  "homepage_url": "https://github.com/NicoleFaye/Chat-Gpt-Long-Text-Input",
  "icons": {
    "48": "icons/Red48.png",
    "32": "icons/Red32.png",
    "128": "icons/Red128.png",
    "256": "icons/big.png"
  },

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://chat.openai.com/*"
  ],
    "web_accessible_resources": [
    {
      "resources":["config.json","icons/Red32.png"],
      "matches": ["https://chat.openai.com/*"]
    }
  ],

  "action": {
    "default_icon": "icons/Red32.png",
    "default_title": "Chat Gpt Long Text Input",
    "default_popup": "popup/ChatGptLongTextInput.html"
  }
}
